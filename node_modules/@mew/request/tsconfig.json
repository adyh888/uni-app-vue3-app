{
  "compilerOptions": {
     "strictNullChecks": true,
     "module": "commonjs",
     "esModuleInterop": true,
     "importHelpers": true,
     "allowSyntheticDefaultImports": true,
     "target": "es5",
     "lib": [
        "es2015","dom"
     ],
     "declaration": true,
     "outDir": "dist",
     "baseUrl": ".",
     "paths": {
       "tslib" : ["node_modules/tslib/tslib.d.ts"]
     }
  },
  "exclude": ["node_modules", "dist"],
  "include": [
      "src" // write ts in src, you can define your own dir
  ]
}
